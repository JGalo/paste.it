<%= semantic_form_for @snippet do |f|%>
  <%f.inputs do%>
    <%= f.input :language, :as =>:select, :collection => Snippet::LANGUAGES %>
    <%= f.input :content, :input_html=> {:autofocus=>"autofocus", :class=>"pastearea"} %>
    <% if user_signed_in? %>
      <%= f.input :private %>
    <%end%>

    <%= f.buttons%>
  <%end%>
<%end%>
